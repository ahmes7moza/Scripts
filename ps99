local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Fluent:CreateWindow({
    Title = "PetSim99" .. Fluent.Version,
    SubTitle = "by dawid",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true, 
    Theme = "Darker",
    MinimizeKey = Enum.KeyCode.LeftControl 
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "box" })
}

Window:SelectTab(1)

local TeleportFarm = false

-- Toggle for teleporting to the nearest 'B'
local ToggleTeleport = Tabs.Main:AddToggle("Teleport", { 
    Title = "Teleport to 'B'",
    Description = "Teleports to the nearest 'B' inside Blocks_1 to Blocks_8",
    Default = false,
    Callback = function(Value)
        TeleportFarm = Value
        if TeleportFarm then
            startTeleport()
        end
    end
})

-- Function to teleport to the nearest 'B' part
function startTeleport()
    spawn(function()
        local player = game:GetService("Players").LocalPlayer
        while TeleportFarm do
            local parentFolder = workspace:FindFirstChild("__THINGS")
            and workspace.__THINGS:FindFirstChild("BlockWorlds")
            
            -- Loop through blocks 1 to 8
            for i = 1, 8 do
                local blockFolder = parentFolder:FindFirstChild("Blocks_" .. i)
                if blockFolder and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                    local rootPart = player.Character.HumanoidRootPart
                    local closestB = nil
                    local minDistance = math.huge
                    
                    -- Find the nearest 'B'
                    for _, obj in ipairs(blockFolder:GetDescendants()) do
                        if obj:IsA("BasePart") and obj.Name == "B" then
                            local distance = (rootPart.Position - obj.Position).Magnitude
                            if distance < minDistance then
                                minDistance = distance
                                closestB = obj
                            end
                        end
                    end

                    -- Teleport to the closest 'B'
                    if closestB then
                        rootPart.CFrame = CFrame.new(closestB.Position + Vector3.new(0, 5, 0)) -- 5 studs above 'B'
                    end
                end
            end
            wait(0.5) -- Wait before checking again
        end
    end)
end
